<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape
            android:shape="rectangle">

            <corners android:radius="24dp"/>

            <gradient
                android:startColor="@color/grey_300"
                android:endColor="@color/grey_300"
                android:gradientRadius="80%"
                android:type="radial"
                android:centerX="0.5"
                android:centerY="0.5"/>

            <stroke
                android:width="2dp"
                android:color="@color/grey_300"/>

            <padding
                android:top="@dimen/common_padding_min"
                android:bottom="@dimen/common_padding_min"
                android:left="@dimen/common_padding_min"
                android:right="@dimen/common_padding_min"/>

        </shape>
    </item>

</selector>