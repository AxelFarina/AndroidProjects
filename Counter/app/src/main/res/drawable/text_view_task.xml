<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape
            android:shape="rectangle">

        <corners
            android:topRightRadius="@dimen/text_radius"
            android:bottomLeftRadius="@dimen/text_radius"/>

        <gradient
            android:startColor="#D83B0B"
            android:endColor="#D83B0B"
            android:gradientRadius="100%p"
            android:type="radial"
            android:centerX="0.5"
            android:centerY="0.5"/>

            <stroke
                android:width="@dimen/button_stroke"
                android:color="#06AAAA"/>

            <size
                android:width="@dimen/text_size"
                android:height="@dimen/text_size"/>

            <padding
                android:top="@dimen/common_padding_min"
                android:bottom="@dimen/common_padding_min"
                android:left="@dimen/common_padding_min"
                android:right="@dimen/common_padding_min"/>

        </shape>
    </item>

</selector>